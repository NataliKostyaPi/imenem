<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle"
            >

            <solid
                android:color="@color/red_button" >
            </solid>
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="43dp"   >
            </corners>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle"   >

            <solid
                android:color="@color/red_button_pressed" >
            </solid>
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="43dp"   >
            </corners>

        </shape>
    </item>
</selector>