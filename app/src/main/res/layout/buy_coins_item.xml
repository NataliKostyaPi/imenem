<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="@dimen/_295sdp"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:layout_marginTop="@dimen/_10sdp"
android:background="@drawable/bord"
android:paddingBottom="5dp"
android:paddingLeft="3dp"
android:paddingRight="3dp"
android:paddingTop="2dp"
android:gravity="center">
<RelativeLayout
    android:layout_width="@dimen/bay_coins_container_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/actionbar_text">
    <LinearLayout
        android:layout_width="@dimen/popular_button_bay_coins_container_width"
        android:layout_height="@dimen/popular_button_bay_coins_container_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/popular_button_bay_coins_container_margin_top"
        android:gravity="center"
        android:clickable="true"
        android:orientation="horizontal"
        android:background="@drawable/orange_cornered_button"
        android:id="@+id/buyButton"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/actionbar_text"
            android:textSize="@dimen/greeting_font_size"
            android:textAllCaps="false"
            android:text="@string/buy_money"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/actionbar_text"
            android:textSize="@dimen/greeting_font_size"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="100"
            android:id="@+id/coinsNumber"
            android:textAllCaps="false"/>
        <ImageView
            android:layout_width="@dimen/_13sdp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/white_coins"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_in_bay_coins_container_margin_top"
        android:layout_marginBottom="@dimen/text_in_bay_coins_container_margin_top"
        android:layout_below="@+id/buyButton"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_in_price"
            android:text="@string/total"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_in_price"
            android:layout_marginLeft="@dimen/price_cont_margin_left"
            android:layout_marginStart="@dimen/price_cont_margin_left"
            android:id="@+id/price"
            android:text="2.99$"/>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>