<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/planContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/bord"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/actionbar_text"


            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_in_price"
                android:layout_marginTop="@dimen/popular_button_bay_coins_container_margin_top"
                style="@style/PaymentSettingsMargin"
                android:text="@string/vip_not_activated"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/popular_button_bay_coins_container_height"
                android:layout_marginTop="@dimen/popular_button_bay_coins_container_margin_top"
                android:orientation="horizontal"
                android:background="@drawable/orange_cornered_button"
                android:id="@+id/buyButton"
                android:text="@string/activate"
                android:textColor="@color/actionbar_text"
                android:textSize="@dimen/greeting_font_size"
                android:layout_marginBottom="@dimen/popular_button_bay_coins_container_margin_top"
                style="@style/PaymentSettingsMargin">
            </Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/planContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/bord"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/actionbar_text"


            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_in_price"
                android:layout_marginTop="@dimen/popular_button_bay_coins_container_margin_top"
                style="@style/PaymentSettingsMargin"
                android:text="@string/vip_not_activated"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/popular_button_bay_coins_container_height"
                android:layout_marginTop="@dimen/popular_button_bay_coins_container_margin_top"
                android:orientation="horizontal"
                android:background="@drawable/orange_cornered_button"
                android:id="@+id/lal"
                android:text="@string/activate"
                android:textColor="@color/actionbar_text"
                android:textSize="@dimen/greeting_font_size"
                android:layout_marginBottom="@dimen/popular_button_bay_coins_container_margin_top"
                style="@style/PaymentSettingsMargin">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
