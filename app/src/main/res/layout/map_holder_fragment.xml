<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/profile_container">

    <LinearLayout
        android:id="@+id/fragmentTitle"
        style="@style/profile_header_layout">

        <ImageView
            style="@style/profile_element_logo"
            android:src="@drawable/map_place" />

        <TextView
            android:id="@+id/friendsCountText"
            android:text="@string/position"
            style="@style/profile_element_title" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dataContainer"
        style="@style/profile_data_container"
        android:layout_height="@dimen/_180sdp"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/mapHolder"
            android:background="@color/actionbar_text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/dataContainer"
        android:layout_alignTop="@+id/dataContainer"
        android:layout_alignLeft="@+id/dataContainer"
        android:layout_alignStart="@+id/dataContainer"
        android:layout_alignRight="@+id/dataContainer"
        android:layout_alignEnd="@+id/dataContainer"
        android:id="@+id/mapGlass"
        />


    <ImageView style="@style/profile_divider" />
</RelativeLayout>