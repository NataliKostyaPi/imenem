<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/image_view_params"
            android:layout_height="@dimen/image_view_params"
            android:layout_marginTop="@dimen/image_container_margin_top"
            android:layout_marginLeft="@dimen/image_container_margin_left"
            android:layout_marginStart="@dimen/image_container_margin_left">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/message_container_margin_top">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="@dimen/name_container_margin_left"
                android:layout_marginStart="@dimen/name_container_margin_left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameTextView"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Adam Golberg"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/status_container_margin_left"
                    android:layout_marginStart="@dimen/status_container_margin_left">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/online"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/time_container_margin_left"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/_134sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9:04"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_8sdp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have a nice day!"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_137sdp"
                    android:layout_marginStart="@dimen/_137sdp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/away"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/actionbar_text"
                            android:text="5"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:src="@drawable/test_photo_shadow"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="@dimen/_2sdp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
