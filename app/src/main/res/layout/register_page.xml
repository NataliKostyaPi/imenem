<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">
        <ImageButton
            android:layout_width="@dimen/arrow_width"
            android:layout_height="@dimen/arrow_height"

            android:background="@color/no_color"
            android:src="@drawable/arrow_back"
            android:scaleType="fitXY"
            android:id="@+id/arrowBackButtonReg"
            android:layout_marginLeft="@dimen/arrow_margin_left"
            android:layout_marginStart="@dimen/arrow_margin_left"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/logo_width_ss"
            android:layout_height="@dimen/logo_height_ss"
            android:src="@drawable/logo_in"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/item_container"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editEmail"
                android:id="@+id/hint"
                android:text="Почти готово..."
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/text_in_center_margin_bottom"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hint"
                android:id="@+id/wrongLogPassNotification"
                android:textColor="@color/red"
                android:textSize="@dimen/font_size"
                android:visibility="invisible"
                android:text="@string/wrong_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_minus15sdp"
                android:layout_gravity="center_horizontal"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editEmail"
                android:layout_above="@+id/editPass"
                android:theme="@style/EditTextStyle">
                <EditText
                    android:id="@+id/editEmailField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="16"
                    android:hint="@string/e_mail"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editPass"
                android:layout_above="@+id/editName"

                android:theme="@style/EditTextStyle">
                <EditText
                    android:id="@+id/editPassField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="Введите свой пароль"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editName"
                android:layout_above="@+id/editBDay"
                android:layout_weight="1"
                android:theme="@style/EditTextStyle">
                <EditText
                    android:id="@+id/editNameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Введите свое имя"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editBDay"
                android:layout_above="@+id/buttonRegister"
                android:layout_marginBottom="@dimen/_19sdp"
                android:theme="@style/EditTextStyle">
                <EditText
                    android:id="@+id/editBDayField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:hint="ДР"
                    android:clickable="true"
                    android:focusable="false"
                    android:cursorVisible="false"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRegister"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal">
                <Button
                    style="@style/SignInUpButton"
                    android:text="Зарегистрироваться"
                    android:id="@+id/button_register"
                    android:layout_marginBottom="@dimen/register_button_margin_bottom"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>