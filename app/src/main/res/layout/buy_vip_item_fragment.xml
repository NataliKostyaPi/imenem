<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F4F9"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/planContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/bord"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/actionbar_text"
                android:gravity="center_horizontal"

                android:orientation="vertical">

                <Button
                    android:layout_width="@dimen/popular_button_bay_coins_container_width"
                    android:layout_height="@dimen/popular_button_bay_coins_container_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/popular_button_bay_coins_container_margin_top"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/orange_cornered_button"
                    android:id="@+id/buyButton"
                    android:text="@string/vip_goal"
                    android:textColor="@color/actionbar_text"
                    android:textSize="@dimen/greeting_font_size"
                    android:textAllCaps="false"
                    >
                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"

                    android:layout_marginTop="@dimen/text_in_bay_coins_container_margin_top"
                    android:layout_marginBottom="@dimen/text_in_bay_coins_container_margin_top"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_in_price"
                        android:text="@string/total"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_in_price"
                        android:layout_marginLeft="@dimen/price_cont_margin_left"
                        android:layout_marginStart="@dimen/price_cont_margin_left"
                        android:id="@+id/price"
                        android:text="100"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/ic_coins"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
