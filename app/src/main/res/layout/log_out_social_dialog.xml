<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/no_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vk_grey_color">
        <ImageView
            style="@style/settings_body_part"
            android:layout_marginRight="@dimen/_minus15sdp"
            android:layout_marginEnd="@dimen/_minus15sdp"
            android:padding="@dimen/_8sdp"
            android:id="@+id/photo"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="@drawable/test_circle_shadow"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="text text"/>
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/arrow_margin_top"
        android:layout_marginTop="@dimen/text_size_in_invite_friend_container">
        <Button
            android:layout_width="@dimen/popular_button_bay_coins_container_width"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_cornered_button"
            android:text="@string/unbind"
            android:textColor="@color/actionbar_text"
            android:id="@+id/unbindButton"/>
        <Button
            android:layout_width="@dimen/popular_button_bay_coins_container_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/price_cont_margin_left"
            android:id="@+id/cancelButton"
            android:background="@drawable/orange_empty_cornered_button"
            android:text="@string/cancel"
            android:textColor="@color/orange"/>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>
</RelativeLayout>